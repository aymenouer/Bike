{% extends "temp_admin.html.twig" %}
{% block content %}

    <div class="row mt">
        <div class="col-md-12">
            <div class="content-panel">
                <table class="table table-striped table-advance table-hover" id="tableac">
                    <h4><i class="fa fa-angle-right"></i> Sponsor Liste </h4>
                    <hr>
                    <thead>
                    <tr>
                        <th><i class="fa fa-bullhorn"></i> id</th>

                        <th><i class="fa fa-bullhorn"></i> Nom </th>
                        <th class="hidden-phone"><i class="fa fa-question-circle"></i> Adresse</th>
                        <th><i class="fa fa-bookmark"></i> Type</th>
                        <th><i class=" fa fa-edit"></i> Numéro de téléphone</th>
                        <th><i class=" fa fa-address-book"></i> Evenement</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody id="rech">
                    {% for e in event %}
                        <tr>


                            <td>{{ e.id }} </td>
                            <td>{{ e.nomsponsor }}</td>
                            <td>{{ e.adresse }}</td>
                            <td>{{ e.typesponsor }}</td>
                            <td>{{ e.num }}</td>
                            <td>{{ e.idevenement.titre}}</td>
                            <td>
                                <a href="{{ path('editSponsor',{'id':e.id}) }}"> <button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button></a>
                                <a href="{{ path('deleteSponsor',{'id':e.id}) }}"> <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button></a>
                            </td>

                        </tr>
                    {% endfor %}


                    </tbody>
                </table>
            </div>
            <!-- /content-panel -->
        </div>
        <!-- /col-md-12 -->
    </div>





{% endblock %}