{% extends "temp_admin.html.twig" %}
{% block content %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#rech tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-advance table-hover" id="tableac">
                <h4><i class="fa fa-angle-right"></i> Evenements</h4>
                <input class="form-control" id="myInput" type="text" id="navbar-search-input" placeholder="Search now" aria-label="search" aria-describedby="search">
                <hr>
                <thead>
                <tr>
                    <th><i class="fa fa-bullhorn"></i> id</th>

                    <th><i class="fa fa-bullhorn"></i> Titre</th>
                    <th class="hidden-phone"><i class="fa fa-question-circle"></i> Description</th>
                    <th><i class="fa fa-bookmark"></i> Date de DÃ©but</th>
                    <th><i class=" fa fa-edit"></i> Date de Fin</th>
                    <th><i class=" fa fa-address-book"></i> Lieu</th>
                    <th><i class=" fa fa-edit"></i> Nombre de Places</th>
                    <th><i class=" fa fa-anchor"></i> Nombre de Participants</th>
                    <th><i class=" fa fa-edit"></i> Image</th>
                    <th><i class=" fa -file-archive-o"></i> Action</th>


                    <th></th>
                </tr>
                </thead>
                <tbody id="rech">
                {% for e in event %}
                <tr>


                    <td>{{ e.id }} </td>
                    <td>{{ e.titre }}</td>
                    <td>{{ e.discription }}</td>
                    <td>{{ e.dated|date }}</td>
                    <td>{{ e.dateF |date }}</td>
                    <td>{{ e.lieu}}</td>
                    <td>{{ e.nbrplace}}</td>
                    <td>{{ e.nbrparticipant}}</td>

                    <td>  <img src="{{ asset('Upload/')}}{{ e.image }}" width="100" class="img-circle" /></td>


        <td>
            <a href="{{ path('evenement_Modifier',{'id':e.id}) }}"> <button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button></a>
            <a href="{{ path('evenement_Supprimer',{'id':e.id}) }}">         <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button></a>
                    </td>

                </tr>
                {% endfor %}


                </tbody>
            </table>
        </div>
        <!-- /content-panel -->
    </div>
    <!-- /col-md-12 -->
</div>





{% endblock %}