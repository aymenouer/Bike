                    <label class="col-lg-2 col-sm-2 control-label">Nbre de place</label>
                    <div class="col-lg-10">
                        {{ form_widget(form.nbrplace, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 col-sm-2 control-label">Image</label>
                    <div class="col-lg-10">
