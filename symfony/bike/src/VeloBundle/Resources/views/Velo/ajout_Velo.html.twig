{% extends 'temp_admin.html.twig' %}


{% block content %}
    <h3><i class="fa fa-angle-right"></i> Blank Page</h3>
    <div class="row mt">
        <div class="col-lg-12">
            <div class="col-lg-12 col-md-6 col-sm-12">
                <div class="form-panel">
                    <div class="showback">




                        <!-- Button trigger modal -->
                        <button class="btn btn-success btn-lg" style="margin-left: 450px;" data-toggle="modal" data-target="#myModal">
                            +add site
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    {{ form_start(form) }}
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        <h4 class="modal-title" id="myModalLabel">Ajout velo</h4>
                                    </div>


                                    <div class="modal-body">
                                        <div class="form-group">

                                            <label>type</label>
                                            {{ form_widget(form.type, { 'attr': {'class': 'form-control', 'type' : 'textarea'} }) }}

                                        </div>
                                        <div class="form-group">
                                            <label>Couleur</label>
                                            {{ form_widget(form.couleur, { 'attr': {'class': 'form-control', 'type' : 'textarea'} })}}
                                        </div>
                                        <div class="form-group">
                                            <label>age</label>

                                            {{ form_widget(form.age, { 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                        <div class="form-group">
                                            <label>etat</label>
                                            {{ form_widget(form.etat, { 'attr': {'class': 'form-control', 'type' : 'textarea'} })}}
                                        </div>
                                        <div class="form-group">
                                            <label>idA</label>

                                            {{ form_widget(form.idA, { 'attr': {'class': 'form-control'}}) }}
                                        </div>


                                    </div>

                                    <div class="modal-footer">
                                        <button type="button"class="btn btn-danger" data-dismiss="modal">Close</button>
                                        <button  type="submit"name="valider" class="btn btn-success">Ajout</button>
                                    </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>

                    </div>
        </div>
    </div>
{% endblock %}
