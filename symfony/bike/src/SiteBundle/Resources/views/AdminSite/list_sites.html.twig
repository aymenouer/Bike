{% extends 'temp_admin.html.twig' %}


{% block content %}
    <h3><i class="fa fa-angle-right"></i> Site</h3>
    <!-- BASIC FORM ELELEMNTS -->
    <div class="row mt">
        <div class="col-lg-12 col-md-6 col-sm-12">
            <div class="form-panel">
                <div class="showback">




                    <!-- Button trigger modal -->
                    <button class="btn btn-success btn-lg" style="margin-left: 450px;" data-toggle="modal" data-target="#myModal">
                        +add site
                    </button>















                    <!-- Modal -->
                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                {{ form_start(form) }}
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    <h4 class="modal-title" id="myModalLabel">Ajout site</h4>
                                </div>


                                <div class="modal-body">
                                    <div class="form-group">

                                        <label>Libelle</label>
                                        {{ form_widget(form.libS, { 'attr': {'class': 'form-control', 'type' : 'textarea'} }) }}

                                    </div>
                                    <div class="form-group">
                                        <label>lieu</label>

                                        {{ form_widget(form.lieu, { 'attr': {'class': 'form-control', 'type' : 'textarea'} })}}
                                    </div>
                                    <div class="form-group">
                                        <label>capacite</label>

                                        {{ form_widget(form.capacite, { 'attr': {'class': 'form-control'}}) }}
                                    </div>


                                </div>

                                <div class="modal-footer">
                                    <button type="button"class="btn btn-danger" data-dismiss="modal">Close</button>
                                    <button  type="submit"name="valider" class="btn btn-success">Ajout</button>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>

                </div>
                <div class="showback">
                    <div class="adv-table">
                        <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>libS</th>
                                <th>lieu</th>
                                <th >capacite</th>
                                <th >Options</th>

                            </tr>
                            </thead>
                            <tbody>
                            {% for res in list %}
                                <tr >
                                    <td>{{ res.idS }}</td>
                                    <td>{{ res.libS }}</td>
                                    <td>{{ res.lieu }}</td>
                                    <td >{{ res.capacite }}</td>
                                    <td>


                                        <i class="fa fa-edit" data-toggle="modal" data-target="#mode{{res.idS}}" ></i>
                                        <a href="{{ path('_delete_site',{('idS'):res.idS}) }}" class="delete" onclick="return confirm('Are you sure')"><i class="fa fa-trash-o" data-toggle="tooltip" title="Delete"></i></a>
                                    </td>

                                </tr>
                                <div class="modal fade" id="mode{{res.idS}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <form method="post" action="{{ path('_update_site',{('idS'):res.idS}) }}">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                    <h4 class="modal-title" id="myModalLabel">Modifier site</h4>
                                                </div>


                                                <div class="modal-body">







                                                    <div class="form-group ">
                                                        <label>Libelle</label>


                                                        <input type="text" name="libS" value="{{  res.libS  }}" class="form-control">

                                                    </div>
                                                    <div class="form-group">
                                                        <label>Lieu</label>

                                                        <input type="text" name="lieu" value="{{  res.lieu  }}" class="form-control">

                                                    </div>
                                                    <div class="form-group">
                                                        <label>Capacite</label>
                                                        <input type="number" name="capacite" value="{{  res.capacite  }}" class="form-control">


                                                    </div>



                                                </div>

                                                <div class="modal-footer">
                                                    <button type="button"class="btn btn-danger" data-dismiss="modal">Close</button>
                                                    <button  type="submit"name="valider" class="btn btn-success">Modifier</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </div>

            </div>

        </div>
        <!-- col-lg-12-->
    </div>
{% endblock %}

