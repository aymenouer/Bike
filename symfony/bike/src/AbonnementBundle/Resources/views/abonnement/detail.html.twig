{% extends 'temp_admin.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12" style="margin-left: 300px;">

                <div class="pricingTable ">
                    <div class="pricingTable-header">
                        <h3 class="title">Standard</h3>
                        <div class="icon"><i class="fa fa-bicycle"></i></div>
                    </div>
                    <ul class="pricing-content">
                        <li><i class="fa fa-arrow-circle-right"></i>Categorie : {{produit.libC}}</li>
                        <li><i class="fa fa-arrow-circle-right"></i>Prix : {{produit.prix}}DT</li>
                        <li><i class="fa fa-arrow-circle-right"></i> Libelle : {{produit.libelle}}</li>

                        <li><i class="fa fa-arrow-circle-right"></i> Quantite : {{ quantite }}</li>
                        <li><i class="fa fa-arrow-circle-right"></i> Site : {{produit.libS}}</li>
                        <li><i class="fa fa-arrow-circle-right"></i> Description : {{produit.description}}</li>

                    </ul>
                    <div class="price-value">
                        <span class="amount">{{produit.prix}} DT</span>

                    </div>
                    <span class="month"><img style="
    width: 40%;
" src="{{ asset('uploads/images/qrproduit/' ~ produit.image) }}"></span>
                    <br>
                    <a href="{{ path('_list_abonnements')}}" class="pricingTable-signup"><- Back</a>
                </div>


                <!-- end custombox -->
            </div>
            <!-- end col-4 -->

        </div>
    </div>

{% endblock %}