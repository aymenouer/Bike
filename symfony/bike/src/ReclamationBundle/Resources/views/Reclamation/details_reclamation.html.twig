{% extends 'temp_admin.html.twig' %}



{% block content %}
    <div class="col-lg-4 col-md-4 col-sm-12" style="
    margin-left: 350px;
    margin-top: 50px;
">
        <div class="dmbox">
            <div id="google_translate_element"></div>
            <div class="service-icon">
                <a class="" href="{{ path('redirect') }}"><i class="dm-icon fa fa-envelope-o fa-3x"></i></a>
            </div>
            <h4> Recalamtion sur {{ reclamation.type  }}</h4>
            <h5> De MR/Mme {{ user.lastName ~ " " ~ user.firstName }} </h5>

            <h4
